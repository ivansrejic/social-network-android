<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/backgroundColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/userPicture"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/avatar"/>

            <TextView
                android:id="@+id/usernameUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/letterColor"
                android:text="USERNAME"/>

            <TextView
                android:id="@+id/emailUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textSize="15dp"
                android:text="Email"/>


        </LinearLayout>

        <TextView
            android:id="@+id/titleAjdi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/letterColor"
            android:textColor="@color/white"
            android:text="Title"
            android:textSize="17dp"
            android:paddingLeft="15dp"
            />
        <TextView
            android:id="@+id/descriptionAjdi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/letterColor"
            android:paddingLeft="15dp"
            android:text="kdsjhfkjasdhfkjdsahfkjadshkdsjhfkjasdhfkjdsahfkjadshkdsjhfkjasdhfkjdsahfkjadshkdsjhfkjasdhfkjdsahfkjadshkdsjhfkjasdhfkjdsahfkjadshkdsjhfkjasdhfkjdsahfkjadshkdsjhfkjasdhfkjdsahfkjadshkdsjhfkjasdhfkjdsahfkjadshkdsjhfkjasdhfkjdsahfkjadshkdsjhfkjasdhfkjdsahfkjadsh"
            />

        <ImageButton
            android:id="@+id/buttonDelete"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:src="@android:drawable/ic_menu_delete" />

    </LinearLayout>

</androidx.cardview.widget.CardView>